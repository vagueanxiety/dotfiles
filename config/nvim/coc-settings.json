{
  "languageserver": {
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": [
        "--lsp"
      ],
      "rootPatterns": [
        "*.cabal",
        "stack.yaml",
        "cabal.project",
        "package.yaml",
        "hie.yaml"
      ],
      "filetypes": [
        "haskell",
        "lhaskell"
      ]
    },
    "ccls": {
      "command": "ccls",
      "filetypes": [
        "c",
        "cpp",
        "cuda",
        "objc",
        "objcpp"
      ],
      "rootPatterns": [
        ".ccls-root",
        "compile_commands.json"
      ],
      "initializationOptions": {
        "cache": {
          "directory": ".ccls-cache"
        },
        "index": {
          "threads": 4
        },
        "client": {
          "snippetSupport": true
        }
      }
    }
  },
  "[rust][html][css][json]": {
    "coc.preferences.formatOnSave": true
  },
  "inlayHint.enable": false,
  "zig.zls.enabled": true,
  "zig.zls.checkForUpdate": false,
  "zig.zls.path": "/usr/bin/zls"
}
